<h1>The Tech Blog</h1>
<section id="currentBlogComment">
  <section class="card">
      <div class="card-body">
        <h3 class="card-title">{{posts.title}}</h3> 
        <h5>Posted by {{posts.user.username}} on {{format_date date_created}}</h5>
        <p class="card-text">{{posts.comment}}</p>
    </div>
  </section>
{{#each posts.comment}}
  <section class="card">
    <div class="card-body">
      <p>Comment</p>
      <p class="card-text">{{body}}</p>
    </div>
  </section>
{{/each}}
</section>
<section class="card text-center">
<div class="card-body">
  <h3 class="card-title">Comment</h3>
  <form id="newComment">
    <div class="card-text"></div>
      <input id="hiddenCommentId" hidden="true" value="{{posts.id}}"></input>
      <textarea id="comment" placeholder="Type your comment here..."></textarea>
    </div>
    <button id="create">Submit</button>
</form>
</div>
</section>

<script src="/js/comment.js"></script>